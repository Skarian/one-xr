<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:id="@+id/titleText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/title_test"
        android:textAppearance="?attr/textAppearanceTitleMedium" />

    <EditText
        android:id="@+id/inputHost"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:hint="@string/hint_host"
        android:inputType="textUri"
        android:text="@string/default_host" />

    <EditText
        android:id="@+id/inputPorts"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:hint="@string/hint_ports"
        android:inputType="text"
        android:text="@string/default_ports" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/buttonStartTest"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/action_start_test" />

        <Button
            android:id="@+id/buttonStopTest"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_weight="1"
            android:text="@string/action_stop" />

        <Button
            android:id="@+id/buttonViewLogs"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_weight="1"
            android:text="@string/action_view_logs" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/buttonZeroView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/action_zero_view" />

        <Button
            android:id="@+id/buttonRecalibrate"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_weight="1"
            android:text="@string/action_recalibrate" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <Button
            android:id="@+id/buttonSensitivityDown"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/action_sensitivity_down" />

        <TextView
            android:id="@+id/textSensitivityValue"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:layout_weight="1"
            android:fontFamily="monospace"
            android:gravity="center"
            android:textAppearance="?attr/textAppearanceBodyMedium" />

        <Button
            android:id="@+id/buttonSensitivityUp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/action_sensitivity_up" />
    </LinearLayout>

    <TextView
        android:id="@+id/textStatus"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:textAppearance="?attr/textAppearanceBodyMedium" />

    <TextView
        android:id="@+id/textTelemetry"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:fontFamily="monospace"
        android:textAppearance="?attr/textAppearanceBodySmall" />

    <io.onepro.imuprobe.OrientationGlSurfaceView
        android:id="@+id/orientationView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="12dp"
        android:layout_weight="1" />

    <LinearLayout
        android:id="@+id/logsPanel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:orientation="vertical"
        android:visibility="gone">

        <TextView
            android:id="@+id/labelOutput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/output_label"
            android:textAppearance="?attr/textAppearanceTitleSmall" />

        <ScrollView
            android:id="@+id/outputScroll"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginTop="8dp"
            android:background="#111111">

            <TextView
                android:id="@+id/textOutput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="monospace"
                android:padding="12dp"
                android:textColor="#E8E8E8"
                android:textIsSelectable="true"
                android:textSize="12sp" />
        </ScrollView>
    </LinearLayout>

</LinearLayout>
